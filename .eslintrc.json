{
  "env": {
    "es2021": true
  },
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1, "ObjectExpression": 1, "ArrayExpression": 1, "ImportDeclaration": 1 }],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "max-len": ["error", 120],
    "sort-keys": ["error"],
    "no-console": ["warn", { "allow": ["info", "error", "warn"] }]
  }
}
